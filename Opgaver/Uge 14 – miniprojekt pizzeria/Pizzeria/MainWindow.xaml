<Window x:Class="Pizzeria.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizzeria"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="600" Background="#FF191919" Foreground="White"    MinWidth="600" MinHeight="750"     MaxWidth="500" MaxHeight="750"  Icon="Cornvibe.png">
    <Grid>
        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="150*"/>
        </Grid.ColumnDefinitions>
        <!-- end -->
        <!-- Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="175*"/>
            <RowDefinition Height="175*"/>
            <RowDefinition Height="175*"/>
            <RowDefinition Height="300*"/>
        </Grid.RowDefinitions>
        <!-- end -->

        <!-- Pizza text -->
        <TextBox x:Name="Pizza1" IsReadOnly="True" AcceptsReturn="True" VerticalAlignment="Top" FontSize="15" BorderThickness="2" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="2" Foreground="White" Background="#FF191919" BorderBrush="WhiteSmoke" Height="190"/>
        <TextBox x:Name="Pizza2" IsReadOnly="True" AcceptsReturn="True" VerticalAlignment="Top" FontSize="15" BorderThickness="2" Grid.Row="1" Grid.ColumnSpan="1" Grid.RowSpan="2" Foreground="White" Background="#FF191919" BorderBrush="WhiteSmoke" Height="190"/>
        <TextBox x:Name="Pizza3" IsReadOnly="True" AcceptsReturn="True" VerticalAlignment="Top" FontSize="15" BorderThickness="2" Grid.Row="2" Grid.ColumnSpan="1" Foreground="White" Background="#FF191919" BorderBrush="WhiteSmoke" Height="190" Grid.RowSpan="2"/>
        <TextBox x:Name="LavSelv" IsReadOnly="True" AcceptsReturn="True" VerticalAlignment="Center" FontSize="15" BorderThickness="2" Grid.Row="3" Grid.ColumnSpan="1" Foreground="White" Background="#FF191919" BorderBrush="WhiteSmoke" Height="261" RenderTransformOrigin="0.512,0.699"/>
        <TextBox x:Name="SizeChoose" IsReadOnly="True" AcceptsReturn="True" VerticalAlignment="Center" FontSize="15" BorderThickness="0" Grid.Row="3" Grid.ColumnSpan="1" Foreground="White" Background="#FF191919" BorderBrush="WhiteSmoke" Height="96" RenderTransformOrigin="0.504,0.668" Margin="3,155,10,10"/>
        <!-- end -->

        <!-- Options-->
        <Button x:Name="Løg" Content="Løg" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,31,113,0" Height="20" Click="Løg_Click" Grid.Column="1"/>
        <Button x:Name="Ananas" Content="Ananas" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,31,33,0" RenderTransformOrigin="1.307,0.45" Height="20" Click="Ananas_Click" Grid.Column="1"/>
        <Button x:Name="ChiliPeber" Content="Chili peber" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,56,113,0" Height="20" Click="ChiliPeber_Click" Grid.Column="1"/>
        <Button x:Name="Oliven" Content="Oliven" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,56,33,0" RenderTransformOrigin="1.307,0.45" Height="20" Click="Oliven_Click" Grid.Column="1"/>
        <Button x:Name="Sovs" Content="Sovs" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,81,113,0" Height="20" Click="Sovs_Click" Grid.Column="1"/>
        <Button x:Name="Ost" Content="ost" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,81,33,0" RenderTransformOrigin="1.307,0.45" Height="20" Click="Ost_Click" Grid.Column="1"/>

        <Button x:Name="Indbagt" Content="Indbagt" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,106,113,0" Height="20" Click="Indbagt_Click" Grid.Column="1"/>
        <Button x:Name="Normal" Content="Normal" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,106,33,0" Height="20" Click="Normal_Click" Grid.Column="1"/>
        <Button x:Name="Paprika" Content="Paprika" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,131,113,0" Height="20" Click="Paprika_Click" Grid.Column="1"/>
        <Button x:Name="Pizzakrydder" Content="Pizzakrydder" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,131,33,0" RenderTransformOrigin="1.307,0.45" Height="20" Click="Pizzakrydder_Click" Grid.Column="1"/>
        <Button x:Name="Ekstra" Content="Ekstra" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,6,73,0" RenderTransformOrigin="1.307,0.45" Height="20" Click="Ekstra_Click" Grid.Column="1"/>
        <Button x:Name="one1" Content="1)" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,156,113,0" Height="20" Click="one1_Click" Grid.Column="1"/>
        <Button x:Name="two2" Content="2)" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,156,33,0" RenderTransformOrigin="1.307,0.45" Height="20" Click="two2_Click" Grid.Column="1"/>
        <Button x:Name="three3" Content="3)" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,181,113,0" RenderTransformOrigin="1.307,0.45" Height="20" Click="three3_Click" Grid.Column="1"/>
        <Button x:Name="Alm" Content="Alm." Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,181,33,0" Height="20" Grid.Column="1" Click="Alm_Click"/>
        <Button x:Name="DeepPan" Content="Deep pan" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,206,113,0" RenderTransformOrigin="1.307,0.45" Height="20" Grid.Column="1" Click="DeepPan_Click"/>
        <Button x:Name="Fam" Content="Fam." Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,206,33,0" RenderTransformOrigin="1.307,0.45" Height="20" Grid.Column="1" Click="Fam_Click"/>
        <Button x:Name="Mega" Content="Mega" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="0,231,113,0" RenderTransformOrigin="1.307,0.45" Height="20" Grid.Column="1" Click="Mega_Click"/>
        <!-- end-->

        <!-- checkbox-->
        <CheckBox x:Name="MegaCheck" HorizontalAlignment="Left" Height="20" Margin="343,218,0,0" Foreground="White" Grid.Row="3" VerticalAlignment="Top" Width="17"/>
        <CheckBox x:Name="AlmCheck" HorizontalAlignment="Left" Height="20" Margin="343,158,0,0" Foreground="White" Grid.Row="3" VerticalAlignment="Top" Width="17" RenderTransformOrigin="-0.308,1.75"/>
        <CheckBox x:Name="FamCheck" HorizontalAlignment="Left" Height="20" Margin="343,198,0,0" Foreground="White" Grid.Row="3" VerticalAlignment="Top" Width="17"/>
        <CheckBox x:Name="DeepCheck" HorizontalAlignment="Left" Height="20" Margin="343,178,0,0" Foreground="White" Grid.Row="3" VerticalAlignment="Top" Width="17"/>
        <!-- end-->

    </Grid>
</Window>
