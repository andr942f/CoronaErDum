<Window x:Class="Pizzeria.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizzeria"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500" Background="#FF191919" Foreground="White"    MinWidth="500" MinHeight="600"     MaxWidth="500" MaxHeight="600"  Icon="Cornvibe.png">
    <Grid>
        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
        </Grid.ColumnDefinitions>
        <!-- end -->
        <!-- Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>
        <!-- end -->

        <!-- Pizza text -->
        <TextBox x:Name="Pizza1" IsReadOnly="True" VerticalAlignment="Top" FontSize="15" BorderThickness="2" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Foreground="White" Background="#FF191919" BorderBrush="WhiteSmoke" Height="190"/>
        <TextBox x:Name="Pizza2" IsReadOnly="True" VerticalAlignment="Top" FontSize="15" BorderThickness="2" Grid.Row="1" Grid.ColumnSpan="1" Grid.RowSpan="1" Foreground="White" Background="#FF191919" BorderBrush="WhiteSmoke" Height="190"/>
        <TextBox x:Name="Pizza3" IsReadOnly="True" VerticalAlignment="Top" FontSize="15" BorderThickness="2" Grid.Row="2" Grid.ColumnSpan="1" Grid.RowSpan="1" Foreground="White" Background="#FF191919" BorderBrush="WhiteSmoke" Height="190"/>
        <!-- end -->
    </Grid>
</Window>
